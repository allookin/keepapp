body {
    overflow: hidden;
    font-family: Ubuntu, verdana, arial, helvetica, sans-serif;
    margin: 0;
}

.h-arrow {
    position: relative;
    margin-top: 50%;
}

.h-arrow > div:before {
    background: none repeat scroll 0 0 #D3725C;
    bottom: 0;
    content: " ";
    display: block;
    height: 0.2em;
    position: absolute;
    right: 0;
    transform: skew(0deg, 35deg);
    -webkit-transform: skew(0deg, 35deg);
    -moz-transform: skew(0deg, 35deg);
    -ms-transform: skew(0deg, 35deg);
    -o-transform: skew(0deg, 35deg);
    width: 50.1%;
}

.h-arrow > div:after {
    background: none repeat scroll 0 0 #D3725C;
    bottom: 0;
    content: " ";
    display: block;
    height: 0.2em;
    left: 0;
    position: absolute;
    transform: skew(0deg, -35deg);
    -webkit-transform: skew(0deg, -35deg);
    -moz-transform: skew(0deg, -35deg);
    -ms-transform: skew(0deg, -35deg);
    -o-transform: skew(0deg, -35deg);
    width: 50.1%;
}

.inbtn {
    background: none repeat scroll 0 0 #ff9b4a;
    height: 3.430em;
    width: 12.5em;
    transform: skew(-37deg);
    -webkit-transform: skew(-37deg);
    -moz-transform: skew(-37deg);
    -o-transform: skew(-37deg);
    -ms-transform: skew(-37deg);
    color: #FFFFFF;
    -webkit-transition: all .25s ease-in-out;
    -moz-transition: all .25s ease-in-out;
    -ms-transition: all .25s ease-in-out;
    -o-transition: all .25s ease-in-out;
    transition: all .25s ease-in-out;
    &:hover {
        background: none repeat scroll 0 0 #d8833f;

    }
    &.red {
        background: none repeat scroll 0 0 #ea5d5d;
        &:hover {
            background: none repeat scroll 0 0 #be5454;
        }
    }
    &.orange {
        // nothing to do here
    }

    > span {
        display: inline-block;
        width: 100%;
        height: 100%;
        text-align: center;
        font-size: 1.7em;
        line-height: 2em;
        transform: skew(37deg);
        -webkit-transform: skew(37deg);
        -moz-transform: skew(37deg);
        -o-transform: skew(37deg);
        -ms-transform: skew(37deg);
        span {
            display: block
        }
    }
}

